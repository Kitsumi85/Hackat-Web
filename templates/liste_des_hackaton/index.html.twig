{% extends 'base.html.twig' %}

{% block title %}Hackaton{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="row"> 
<div class="example-wrapper">
    {% for unHackaton in hackaton %}
    <div class="card" style="width: 18rem; margin-right: 1%;">
					<div class="card-body">
						<h5 class="card-title">
							Hackaton du {{unHackaton.DateDebut|date('d/m/y')}}
						</h5>
						<p>
                        Date limite pour l'inscription {{unHackaton.DateLimInsc|date('d/m/y')}}
						</p>
						
					</div>
				</div>
    {% endfor %}
</div>
</div>
{% endblock %}
