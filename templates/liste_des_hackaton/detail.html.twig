{% extends 'base.html.twig' %}

{% block title %}Detail{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="card" style="margin-left:40%; margin-right:40%; margin-top:5%;">
  <div class="card-header">
    {{hackaton.Nom}}
  </div>
  <div class="card-body">
    <h5 class="card-title">Date limite pour l'inscription {{hackaton.DateLimInsc|date('d/m/y')}}</h5>
    <p class="card-text">Commence le {{hackaton.DateDebut|date('d/m/y')}}</p>
    <p class="card-text">Finis le {{hackaton.DateFin|date('d/m/y')}}</p>
    <p class="card-text">À {{hackaton.Lieu}}</p>
    <p class="card-text">Commence à {{hackaton.Heure|date('H:i')}} Heure</p>  
    {% if is_granted('IS_AUTHENTICATED_FULLY') and hackaton.DateLimInsc > date() and inscrit == null %}
    <a href="{{path('app_inscription', {id:hackaton.id})}}" class="btn btn-primary">S'inscrire</a>
    {% endif %}
    {% if is_granted('IS_AUTHENTICATED_FULLY')%}
    <a class="favorite">Favorite </a>
    {% endif %}
  </div>
</div>
{% endblock %}
